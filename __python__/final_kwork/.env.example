# TG_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

TG_BOT_TOKEN=7802571973:AAHIUjz34sva4MaAovZe5cwdLVFhgxxtjQ8  #my with name:  @test_bot45533_bot


# === Telegram API (для Telethon) ===
# Получите на https://my.telegram.org/apps
# Эти значения используются если у аккаунта нет своего JSON с api_id/api_hash

# TG_API_ID=12345678
# TG_API_HASH=your_api_hash_here
TG_API_ID=29281541 #my
TG_API_HASH=6395720ff1ecde1e69cbafb2201039b8  #my

# === Admin IDs ===
# Telegram ID администраторов (через запятую,без пробелов)
# Узнать свой ID можно у @userinfobot
# ADMIN_IDS=123456789
ADMIN_IDS=6104919911 #my


# === Database ===
# SQLite (по умолчанию - рекомендуется для небольших проектов)
DATABASE_URL=sqlite+aiosqlite:///./data.db
# PostgreSQL (для продакшна):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/tg_accounts

# === Security / Лимиты ===
# Макс. активных аккаунтов на одного менеджера
MAX_ACCOUNTS_PER_MANAGER=3
# Макс. запросов в день (anti-spam)
MAX_REQUESTS_PER_DAY=3
# Cooldown между запросами аккаунтов (секунды)
REQUEST_COOLDOWN_SECONDS=60

# === Telethon Workers ===
# Таймаут ожидания кода подтверждения (секунды)
CODE_WAIT_TIMEOUT=180

# === Telethon Connection ===
# Количество попыток подключения
CONNECTION_RETRIES=5
# Количество попыток повтора запросов
REQUEST_RETRIES=5
# Задержка между попытками (секунды)
RETRY_DELAY=2
# Порог автосна при FloodWait (секунды)
FLOOD_SLEEP_THRESHOLD=60
# Таймаут подключения (секунды)
CONNECTION_TIMEOUT=30

# === Paths / Директории ===
# Папка для session файлов
SESSIONS_DIR=./storage/sessions
# Общая папка хранения
STORAGE_DIR=./storage

# === Per-account API credentials ===
# JSON файлы для поиска api_id/api_hash рядом с .session
ACCOUNT_JSON_FILENAMES=api.json,config.json,credentials.json,app.json
# Использовать TG_API_ID/TG_API_HASH если JSON не найден
FALLBACK_ENV_API=true

# === Logging ===
# Режим отладки
DEBUG=false
# Уровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
